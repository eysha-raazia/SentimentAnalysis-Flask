pipeline {
  agent any
  script {
    def file = load 'func.groovy'
  }
    stages {
      stage('checkout') {
        steps {
          script {
            file.checkout()
          }
        }
      }
      stage('Build') {
        steps {
          script {
            file.build()
          }
        }
      }
      
      stage('Deploy') {
        steps {
          script {
            file.deploy()
          }
        }
      }
    }
}
