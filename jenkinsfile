pipeline {
  agent any
  script {
    def file = load 'func.groovy'
  }
    stages {
      stage('checkout') {
        steps {
          file.checkout()
        }
      }
      stage('Build') {
        steps {
          file.build()
        }
      }
      
      stage('Deploy') {
        steps {
          file.deploy()
        }
      }
    }
}
